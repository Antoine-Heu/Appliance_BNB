<%= simple_form_for @appliance do |f| %>
  <%= f.input :name %>
  <%= f.input :category, collection: Appliance::CATEGORIES %>
  <%= f.input :description %>
  <%= f.input :eaters, input_html: { min: 1 } %>
  <%= f.input :condition, collection: Appliance::CONDITIONS %>
  <%= f.input :price, input_html: { min: 1 } %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>

<div class="container">

  <div class="container d-flex justify-content-around my-4">
    <% Appliance::CATEGORIES.each do |category| %>
      <%= link_to category, root_path(filter: category), class: "text-center text-decoration-none text-warning" %>
    <% end %>
  </div>

  <div class="d-flex flex-wrap">
    <%= render @appliances %>
  </div>
</div>

<%# belongs_to :booker, class_name: "User", foreign_key: :booker_id
  belongs_to :appliance
  belongs_to :owner, class_name: "User", foreign_key: :owner_id

  validates :start_date, presence: true
  validates :end_date, presence: true
  validates_length_of :owner_comment, min: 24
  validates_length_of :booker_comment, min: 24 %>

<div class="d-flex justify-content-between">
  <div>
    <h2>Bienvenue, <%= current_user.username %>!</h2>
  </div>
</div>
<% if user_signed_in? %>
  <div class="container">
    <h3>My appliances:</h3>
    <div class="d-flex flex-wrap justify-content-around">
      <% @user.appliances.each do |appliance| %>
        <div class="card-product">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
          <div class="card-product-infos">
            <h2><%= appliance.name %></h2>
            <h4><%= appliance.category %></h4>
            <p><strong><%= appliance.price %>â‚¬</strong></p>
              <div class="d-flex justify-content-around">
                <button type="button" class="btn btn-warning rounded-3 btn-sm">
                  <%= link_to "edit", edit_appliance_path(appliance) %>
                </button>
                <button type="button" class="btn btn-warning rounded-3 btn-sm">
                  <%= link_to "delete", appliance_path(appliance), method: :delete, data: { confirm: 'Are you sure?' } %>
                </button>
              </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

